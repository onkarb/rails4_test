    <% if books.any? %> 
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Released on</th>
            <th>Published</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% books.each do |book| %>
            <%#= render partial: "book", locals: { :book => book}%>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td><%= book.released_on %></td>
              <td><%= book.published %></td>
              <td><%= link_to 'Show', book %></td>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

